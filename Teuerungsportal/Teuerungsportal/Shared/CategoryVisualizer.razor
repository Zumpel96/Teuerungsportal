<MudSelectItem Value="@Category" Disabled="@(Category.SubCategories.Any() || Category.Id == new Guid("23b3d57b-7d2f-4544-b4d3-3b7fdbdd22f8"))" >
    <MudText Class="@RecursionClass" Style="@RecursionPadding">
        @Category.Name
    </MudText>
</MudSelectItem>

@foreach (var subCategory in Category.SubCategories)
{
    <CategoryVisualizer Category="@subCategory" RecursionLevel="@(RecursionLevel + 1)"/>
}