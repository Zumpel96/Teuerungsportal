<MudDialog>
    <DialogContent>
        @if (IsLoading)
        {
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100%" Height="400px"/>
        }
        else
        {
            <PriceTransitionChart ProductName="@Product.Name" PriceData="@PriceHistory"/>
        }

        <MudGrid Class="mt-8">
            <MudItem Style="min-width: 36rem">
                <RecentPriceChanges IsLoading="@IsLoading" PriceChanges="@PriceHistory" HideDetails HideBrand HideCategory HideStore HideName HideFavorite/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        @if (!string.IsNullOrEmpty(Url))
        {
            <MudButton Color="Color.Secondary" Href="@($"{Url}")" Target="blank">@L?["onlineShopLink"]</MudButton>
        }
        <MudButton Color="Color.Primary" OnClick="Submit">@L?["close"]</MudButton>
    </DialogActions>
</MudDialog>