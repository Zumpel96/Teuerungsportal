@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@IsDarkTheme" Theme="@CustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Transparent">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
    </MudAppBar>
    <MudDrawer Class="py-4" @bind-Open="@DrawerOpen" Breakpoint="Breakpoint.Md" Elevation="1" Variant="@DrawerVariant.Responsive" PreserveOpenState="true">
        <MudDrawerHeader>
            <MudImage Src="./img/logo.png" Style="width: 100%"/>
        </MudDrawerHeader>
        
        <NavMenu @bind-DrawerState="@DrawerOpen" @bind-IsDarkTheme="@IsDarkTheme"/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>