@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="@CustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Transparent">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
    </MudAppBar>
    <MudDrawer @bind-Open="@DrawerOpen" Breakpoint="Breakpoint.Md" Elevation="1" Variant="@DrawerVariant.Responsive" PreserveOpenState="true">
        <MudDrawerHeader>
            <MudText Class="mt-3" Typo="Typo.h3">@L?["appName"]</MudText>
        </MudDrawerHeader>
        
        <NavMenu @bind-DrawerState="@DrawerOpen"/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>