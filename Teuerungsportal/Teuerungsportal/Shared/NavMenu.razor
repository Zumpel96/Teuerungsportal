<MudNavMenu>
    <MudText Typo="Typo.h6" Class="px-4">@L?["appName"]</MudText>
    <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@L?["appInfo"]</MudText>
    <MudDivider Class="my-2"/>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="/categories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Category">@L?["categories"]</MudNavLink>
    <MudNavGroup Title="@L?["language"]" Icon="@Icons.Material.Filled.Flag">
        <MudNavLink OnClick="@(() => ChangeLanguage("de-DE"))">@L?["german"]</MudNavLink>
        <MudNavLink OnClick="@(() =>ChangeLanguage("en-US"))">@L?["english"]</MudNavLink>
    </MudNavGroup>
    <MudNavLink Href="/about" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Help">About</MudNavLink>
</MudNavMenu>