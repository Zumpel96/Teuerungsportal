@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>

<MudText Typo="Typo.h1">Weather forecast</MudText>

<MudText Typo="Typo.body1">This component demonstrates fetching data from the server.</MudText>

@if (Forecasts == null)
{
    <MudText Typo="Typo.body1">Loading...</MudText>
}
else
{
    <MudTable Items="@Forecasts" FixedHeader="true" FixedFooter="false" Height="400px">
        <HeaderContent>
            <MudTh>Date</MudTh>
            <MudTh>Temp. (C)</MudTh>
            <MudTh>Temp. (F)</MudTh>
            <MudTh>Summary</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Date">@context.Date.ToShortDateString()</MudTd>
            <MudTd DataLabel="Temp. (C)">@context.TemperatureC</MudTd>
            <MudTd DataLabel="Temp. (F)">@context.TemperatureF</MudTd>
            <MudTd DataLabel="Summary">@context.Summary</MudTd>
        </RowTemplate>
    </MudTable>
}

