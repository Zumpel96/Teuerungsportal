@page "/changes"

<PageTitle>@L?["appName"]</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h1">@L?["todayChanges"]</MudText>
        <MudDivider/>
    </MudItem>


    <MudItem xs="12">
        <MudPaper>
            <RecentPriceChanges PriceChanges="@PaginatedPriceHistory" Page="@CurrentPricePage" NumberOfPages="PricePages" PageChanged="@OnPricePageChanged" IsLoading="@IsLoadingPriceData"/>
        </MudPaper>
    </MudItem>
</MudGrid>