@page "/"

<PageTitle>@L?["appName"]</PageTitle>

<MudContainer>
    <MudItem xs="12">
        <MudCard>
            <MudText Typo="Typo.h1">
                @L?["goodbyeHeader"]
            </MudText>

            <MudText Typo="Typo.body1" Class="mb-3">
                @L?["goodbyeInitial"]
            </MudText>

            <BlockQuote Text="@L?["quoteText"]" Quote="@L?["quoteSource"]" Url="https://www.derstandard.at/story/3000000206583/von-regierung-angekuendigte-vergleichsplattform-fuer-lebensmittel-kommt-nicht"></BlockQuote>

            <MudText Typo="Typo.body1" Class="my-3">
                @L?["goodbyeTextA"]
            </MudText>

            <MudText Typo="Typo.body1" Class="mb-3">
                @L?["goodbyeTextB"]
            </MudText>

            <MudText Typo="Typo.body1" Class="mb-3">
                @L?["goodbyeTextC"]
            </MudText>

            <MudText Typo="Typo.body1" Class="mb-3">
                @L?["goodbyeTextD"]
            </MudText>

            <MudText Typo="Typo.body1" Class="mb-3">
                @L?["goodbyeThanks"]
            </MudText>

            <MudText Typo="Typo.body1">
                - Bernhard
            </MudText>
        </MudCard>
    </MudItem>
</MudContainer>