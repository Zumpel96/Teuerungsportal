@page "/stores"

<PageTitle>@L?["appName"] - @L?["stores"]</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h1">@L?["stores"]</MudText>
        <MudAlert Severity="Severity.Info">
            <MudText Typo="Typo.body1">@L?["storesInfo"]</MudText>
        </MudAlert>

        <MudDivider/>
    </MudItem>

    @if (IsLoading)
    {
        @for (var i = 0; i < 3; i++)
        {
            <MudItem xs="12" md="6" xl="4">
                <MudPaper>
                    <MudSkeleton Width="40%" Height="3rem"/>
                </MudPaper>
            </MudItem>
        }
    }
    else
    {
        @foreach (var store in StoresList)
        {
            <MudItem xs="12" md="6" xl="4">
                <MudPaper>
                    <MudLink Href=@($"/stores/{store.Name}") Typo="Typo.h2">@store.Name</MudLink>
                </MudPaper>
            </MudItem>
        }
    }
</MudGrid>